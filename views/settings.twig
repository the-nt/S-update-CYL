{#
 # Panel settings page
 #
 # v3-(Panel-1.1.0-BETA)
 #}

{% extends 'templates/base.twig' %}

{% block title %}Settings{% endblock %}

{% block head %}
    <!-- Settings CSS -->
    <link href="{{ resPath ~ "css/settings.css" }}" rel="stylesheet" />
{% endblock %}

{% block content %}
    <style>
        html, body {
            background-image: url({{ resPath ~ "images/background.png" }});
        }
    </style>

    <div id="mainDiv">
        <img src="{{ resPath ~ 'images/logo.png' }}" />
        <br />
        <br />
        <button id="home" style="margin-right: 50px; color: #3247ff; font-size: 20px" onclick="window.location.href='home'">Cancel</button>
        <br />
        <br />

        <form method="post" target="" id="passwordForm">
            <input id="form" name="form" value="passwordForm" style="display: none;" />

            <h1><span style="color: #3247ff">Changer le Mot de Passe</span></h1>
            <br />
            <br />

            <label for="password" style="color: #3c50cb">Mot de Passe</label> : <input class="text-field" type="password" name="password" id="password" style="margin-right: 110px; color: #14ff1c;" onkeyup="checkFields(); return false;" required/><br />
            <label for="vpassword" style="color: #3c50cb">Confirmation Mot de Passe</label> : <input class="text-field" type="password" name="vpassword" id="vpassword" style="margin-right: 200px; color: #14ff1c;" onkeyup="checkFields(); return false;" required/><br /><br />
        </form>

        <button class="submit-button" onclick="checkAndSubmit()" style="margin-right: 50px; color: #3247ff; font-size: 20px">Changer</button>
    </div>
{% endblock %}

{% block scripts %}
    <!-- The FieldChecker JS -->
    <script src="{{ resPath ~ 'js/fieldChecker.js' }}"></script>
{% endblock %}
