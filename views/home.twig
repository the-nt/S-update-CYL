{% extends 'templates/base.twig' %}

{% block title %}Accueil{% endblock %}

{% block head %}
    <!-- Index CSS -->
    <link href="{{ resPath ~ "css/index.css" }}" rel="stylesheet" />
{% endblock %}

{% block content %}
<div class='fulldiv'>
    <div id="centerDiv">
        <div id="left-buttons">
            <a href="../auth/logout">
                <div id="disconnect" class="button" style="display: none" >
                    <img id="disconnect-icon" class="button-icon" src="{{ resPath ~ 'images/disconnect.png' }}" />
                    <p id="disconnect-label" class="button-label">Déconnecter</p>
                </div>
            </a>
        </div>
        <div style="text-align: center; margin: 0px" id="centre">
            <img id="sharklogo" src="{{ resPath ~ 'images/sharklogo.png' }}" />
            <canvas id="canvas" width="350" height="350"></canvas>
            <img id="logo" style="display: none;" src="{{ resPath ~ 'images/icon.png' }}" />
            <img id="textlogo" style="display: none;" src="{{ resPath ~ 'images/textlogo.png' }}" />

            <div id="infos">
                <b>Status : <span style="color: #3247ff">Activé</span></b><br /><br />
            </div>
        </div>

        <div id="right-buttons">
            <a href="../panel/settings">
                <div id="settings" class="button " style="display: none;">
                    <img id="settings-icon" class="button-icon" src="{{ resPath ~ 'images/settings.png' }}" />
                    <p id="settings-label" class="button-label">Paramètres</p>
                </div>
            </a>
        </div>

        <div id="center-buttons">
            <a href="../support">
                <div id="support" class="button" style="display: none;">
                    <img id="support-icon" class="button-icon" src="{{ resPath ~ 'images/support.png' }}" />
                    <p id="support-label" class="button-label">Support</p>
                </div>
            </a>
        </div>

        <div id="downright-buttons">
            <a href="../panel/explorer">
                <div id="explorer" class="button" style="display: none" >
                    <img id="explorer-icon" class="button-icon" src="{{ resPath ~ 'images/explorer.png' }}" />
                    <p id="explorer-label" class="button-label">Fichiers</p>
                </div>
            </a>
        </div>

        <div id="downleft-buttons">
            <a href="../discord">
                <div id="discord" class="button" style="display: none;">
                    <img id="discord-icon" class="button-icon" src="{{ resPath ~ 'images/discord.png' }}" />
                    <p id="discord-label" class="button-label">Discord</p>
                </div>
            </a>
        </div>
    </div>


</div>
{% endblock %}

{% block scripts %}
    <!-- Index JS script -->
    <script src="{{ resPath ~ 'js/index.js' }}"></script>

    <!-- Starting the JS script -->
    <script>
        start({{ serverEnabled ? "true" : "false" }}, "{{ resPath ~ 'images/background.png' }}");
    </script>
{% endblock %}
